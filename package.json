{
  "name": "reclaim-oracle-indexer",
  "version": "2.0.0",
  "description": "Secure, fast, ZK-backed data infrastructure layer for all DeFi and tokenized asset markets",
  "main": "index.js",
  "scripts": {
    "oracle": "node oracle-feeds/src/aggregator.js",
    "indexer": "ts-node indexer/tokenIndexer.ts",
    "indexer:liquidity": "ts-node indexer/liquidityIndexer.ts",
    "api": "node analytics-api/src/server.js",
    "graphql": "ts-node api/graphql-server.ts",
    "websocket": "ts-node websocket/server.ts",
    "ml": "python ml-anomaly-detector/src/detector.py",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testMatch='**/*.integration.test.ts'",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:graphql\" \"npm run dev:ws\"",
    "dev:api": "nodemon analytics-api/src/server.js",
    "dev:graphql": "nodemon --exec ts-node api/graphql-server.ts",
    "dev:ws": "nodemon --exec ts-node websocket/server.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "build": "tsc",
    "build:contracts": "cd oracle && npx hardhat compile",
    "deploy:local": "cd oracle && npx hardhat run scripts/deploy.ts --network localhost",
    "deploy:testnet": "cd oracle && npx hardhat run scripts/deploy.ts --network sepolia"
  },
  "keywords": [
    "blockchain",
    "oracle",
    "defi",
    "trustless",
    "data-infrastructure",
    "zk-stark",
    "graphql",
    "websocket",
    "indexer"
  ],
  "author": "Reclaim Oracle Team",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@graphql-tools/schema": "^10.0.2",
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.3",
    "helmet": "^7.1.0",
    "prom-client": "^15.1.0",
    "redis": "^4.6.11",
    "web3": "^4.3.0",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "@openzeppelin/hardhat-upgrades": "^3.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.9",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "solidity-coverage": "^0.8.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
