# ==================== DATABASE ====================
DATABASE_URL=postgresql://reclaim:password@localhost:5432/reclaim_oracle
REDIS_URL=redis://:password@localhost:6379

# ==================== RPC ENDPOINTS ====================
ETHEREUM_RPC=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
POLYGON_RPC=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ARBITRUM_RPC=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY
OPTIMISM_RPC=https://opt-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BASE_RPC=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# ==================== API KEYS ====================
CHAINLINK_API_KEY=your_chainlink_key
PYTH_API_KEY=your_pyth_key
REDSTONE_API_KEY=your_redstone_key

# ==================== ORACLE CONFIGURATION ====================
MIN_ORACLE_SOURCES=5
MAX_PRICE_DEVIATION=500
STD_DEV_CAP=2.5
SLASHING_THRESHOLD=1000
ORACLE_HEARTBEAT=300

# ==================== SERVER CONFIGURATION ====================
NODE_ENV=development
PORT=3000
GRAPHQL_PORT=4000
WS_PORT=8080

# ==================== SECURITY ====================
JWT_SECRET=your_jwt_secret_change_this
API_RATE_LIMIT_WINDOW=60000
API_RATE_LIMIT_MAX=100

# ==================== MONITORING ====================
GRAFANA_PASSWORD=admin
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# ==================== DOCKER ====================
POSTGRES_PASSWORD=change_this_password
REDIS_PASSWORD=change_this_password

# ==================== ML CONFIGURATION ====================
ANOMALY_THRESHOLD=0.85
MODEL_TYPE=IsolationForest
TRAINING_INTERVAL=86400

# ==================== INDEXER CONFIGURATION ====================
INDEXER_START_BLOCK=latest
INDEXER_BATCH_SIZE=100
SNAPSHOT_INTERVAL=1000

# ==================== ZK CONFIGURATION ====================
ZK_SECURITY_LEVEL=128
ZK_TIMESTAMP_TOLERANCE=300
ZK_REQUIRED_VERIFICATIONS=2

# ==================== GOVERNANCE ====================
GOVERNANCE_VOTING_PERIOD=604800
GOVERNANCE_QUORUM=1000000

# ==================== LOGGING ====================
LOG_LEVEL=info
LOG_FILE=./logs/reclaim-oracle.log
